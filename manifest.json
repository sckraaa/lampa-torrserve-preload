{
  "name": "TorrServe Smart Preload",
  "version": "1.0.0",
  "author": "TorrServe Team",
  "description": "Умная предзагрузка торрентов для плавного просмотра 4K контента. Автоматически рассчитывает оптимальный размер предзагрузки на основе скорости интернета.",
  "url": "torrserve-smart-preload.js",
  "icon": "data:image/svg+xml;base64,",
  "tags": ["TorrServe", "Предзагрузка", "4K", "Стриминг"],
  "minLampaVersion": "1.0.0",
  "permissions": ["network", "storage"],
  "settings": {
    "torrserve_host": {
      "type": "string",
      "default": "http://192.168.1.100:8090",
      "title": "Адрес TorrServe",
      "description": "IP адрес и порт TorrServe сервера"
    },
    "auto_calculate": {
      "type": "boolean",
      "default": true,
      "title": "Автоматический расчет",
      "description": "Включить умное вычисление размера предзагрузки"
    },
    "default_percent": {
      "type": "number",
      "default": 50,
      "min": 10,
      "max": 90,
      "title": "Процент по умолчанию",
      "description": "Размер предзагрузки по умолчанию (%)"
    },
    "preload_timeout": {
      "type": "number",
      "default": 30,
      "min": 5,
      "max": 120,
      "title": "Таймаут (мин)",
      "description": "Максимальное время ожидания предзагрузки"
    },
    "show_notifications": {
      "type": "boolean",
      "default": true,
      "title": "Уведомления",
      "description": "Показывать уведомления о статусе предзагрузки"
    }
  }
}
